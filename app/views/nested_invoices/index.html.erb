<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Subtotal cents</th>
      <th>Shipping cents</th>
      <th>Tax cents</th>
      <th>Total cents</th>
      <th>Amount due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.subtotal_cents %></td>
        <td><%= invoice.shipping_cents %></td>
        <td><%= invoice.tax_cents %></td>
        <td><%= invoice.total_cents %></td>
        <td><%= invoice.amount_due %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

