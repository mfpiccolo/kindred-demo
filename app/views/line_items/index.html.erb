<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Description</th>
      <th>Qty</th>
      <th>Price cents</th>
      <th>Total cents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.invoice_id %></td>
        <td><%= line_item.description %></td>
        <td><%= line_item.qty %></td>
        <td><%= line_item.price_cents %></td>
        <td><%= line_item.total_cents %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line item', new_line_item_path %>
